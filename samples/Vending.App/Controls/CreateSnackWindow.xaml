<Window x:Class="Vending.App.Controls.CreateSnackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Snack" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" Margin="5,10,5,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Margin="5"/>

        <TextBlock Text="Picture URL:" Grid.Row="2" Margin="5,10,5,5"/>
        <TextBox x:Name="PictureUrlTextBox" Grid.Row="3" Margin="5"/>

        <Button x:Name="SaveButton" Content="Save" Grid.Row="4" Margin="5" Click="SaveButton_Click"/>
    </Grid>
</Window>