@inherits ReactiveComponentBase<SnackViewModel>
@if (ViewModel != null)
{
    <MudGrid>
        <MudItem xs="2">
            <MudAvatar Image="@ViewModel.PictureUrl" Rounded="true" />
        </MudItem>
        <MudItem xs="10">
            <MudText Typo="Typo.body2">@ViewModel.Name</MudText>
            <MudText Typo="Typo.caption">M: @ViewModel.MachineCount TQ: @ViewModel.TotalQuantity TA: @ViewModel.TotalAmount BC: @ViewModel.BoughtCount BA: @ViewModel.BoughtAmount</MudText>
        </MudItem>
    </MudGrid>
}
else
{
    <MudText Typo="Typo.body2">Loading...</MudText>
}
