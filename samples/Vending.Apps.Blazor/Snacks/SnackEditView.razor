@using Fluxera.Utilities.Extensions
@inherits ReactiveComponentBase<SnackEditViewModel>
@if (ViewModel != null)
{
    <MudGrid>
        <MudItem xs="12">
            <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Visible="@ViewModel.ErrorInfo.IsNotNullOrEmpty()">@ViewModel.ErrorInfo</MudAlert>
        </MudItem>
        <MudItem xs="12">
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Id:" @bind-Value="@ViewModel.Id" ReadOnly="true" Disabled="@ViewModel.IsDeleted" />
                    <MudTextField Label="Name:" @bind-Value="@ViewModel.Name" Disabled="@ViewModel.IsDeleted" AutoFocus="true" />
                    <MudTextField Label="Picture Url:" @bind-Value="@ViewModel.PictureUrl" Disabled="@ViewModel.IsDeleted" />
                    <MudDivider />
                    <MudImage Src="@ViewModel.PictureUrl" Width="128" Height="128" Disabled="@ViewModel.IsDeleted" />
                    <MudDivider />
                    <MudCheckBox Label="Deleted" Checked="@ViewModel.IsDeleted" Disabled="true" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton StartIcon="@Icons.Material.Filled.Save" Command="@ViewModel.SaveSnackCommand" Variant="@Variant.Filled" Color="Color.Primary">Save</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
}
else
{
    <MudProgressCircular Color="Color.Info" Indeterminate="true" />
}
