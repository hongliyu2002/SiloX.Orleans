@inherits ReactiveComponentBase<SlotViewModel>
@if (ViewModel != null)
{
    <MudGrid>
        <MudItem xs="5">
            <Vending.Apps.Blazor.Business.SnackView DisplayViewModel="@ViewModel.Snack" />
        </MudItem>
        <MudItem xs="7">
            <MudStack Justify="Justify.Center">
                <MudText Typo="Typo.body1" Color="Color.Info">Remain: @ViewModel.Quantity</MudText>
                <MudText Typo="Typo.body1" Color="Color.Info">Price: @ViewModel.Price?.ToString("C2")</MudText>
            </MudStack>
        </MudItem>
    </MudGrid>
}
else
{
    <MudProgressCircular Color="Color.Info" Indeterminate="true" />
}
