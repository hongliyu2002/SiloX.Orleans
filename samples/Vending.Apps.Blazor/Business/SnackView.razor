@inherits ReactiveComponentBase<SnackViewModel>
@if (ViewModel != null)
{
    <MudGrid>
        <MudItem xs="12">
            <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Style="@(ViewModel.ErrorInfo.IsNotNullOrEmpty() ? "display:block" : "display:none")">@ViewModel.ErrorInfo</MudAlert>
        </MudItem>
        @if (ViewModel.IsDeleted == false)
        {
            <MudItem xs="12">
                <MudStack Justify="Justify.Center">
                    <MudAvatar Image="@ViewModel.PictureUrl" Size="Size.Large" Rounded="true" />
                    <MudText Typo="Typo.caption">@ViewModel.Name</MudText>
                </MudStack>
            </MudItem>
        }
        else
        {
            <MudItem xs="12">
                <MudText Typo="Typo.body2">Snack has been deleted</MudText>
            </MudItem>
        }
    </MudGrid>
}
else
{
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.body2">(None)</MudText>
        </MudItem>
    </MudGrid>
}
