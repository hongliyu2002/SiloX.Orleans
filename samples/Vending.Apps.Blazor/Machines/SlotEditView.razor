@inherits ReactiveComponentBase<SlotEditViewModel>
@if (ViewModel != null)
{
    <MudGrid>
        <MudItem xs="4" sm="2">
            <MudTextField T="int" @bind-Value="@ViewModel.Position" Label="Position" Variant="Variant.Text" Color="@Color.Info" />
        </MudItem>
        <MudItem xs="8" sm="4">
            <MudSelect @bind-Value="@ViewModel.CurrentSnack" Label="Snack" Color="@Color.Info">
                @foreach (var snack in ViewModel.Snacks)
                {
                    <MudSelectItem Value="snack" Disabled="@snack.IsDeleted">
                        <SnackView ViewModel="snack" />
                    </MudSelectItem>
                }
            </MudSelect>
        </MudItem>
        <MudItem xs="4" sm="2">
            <MudTextField T="int?" @bind-Value="@ViewModel.Quantity" Label="Quantity" Variant="Variant.Text" Color="@Color.Info" />
        </MudItem>
        <MudItem xs="4" sm="2">
            <MudTextField T="decimal?" @bind-Value="@ViewModel.Price" Label="Price" Variant="Variant.Text" Color="@Color.Info" />
        </MudItem>
        <MudItem xs="4" sm="2">
            <MudTextField T="decimal?" @bind-Value="@ViewModel.Amount" Label="Amount" Variant="Variant.Text" Color="@Color.Info" ReadOnly="true" />
        </MudItem>     
    </MudGrid>
}
else
{
    <MudProgressCircular Color="Color.Info" Indeterminate="true" />
}
