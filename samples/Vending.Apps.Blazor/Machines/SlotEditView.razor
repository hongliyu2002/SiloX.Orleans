@inherits ReactiveComponentBase<SlotEditViewModel>
@if (ViewModel != null)
{
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">P:</MudText>
            <MudTextField T="int" @bind-Value="@ViewModel.Position" Variant="Variant.Outlined" Adornment="Adornment.None" Style="width: 50px;" />
            <MudSelect @bind-Value="@ViewModel.CurrentSnack" Label="Snacks" Color="@Color.Primary" Style="width: 200px;">
                @foreach (var snack in ViewModel.Snacks)
                {
                    <MudSelectItem Value="snack" Disabled="@snack.IsDeleted">
                        <SnackView ViewModel="snack" />
                    </MudSelectItem>
                }
            </MudSelect>
            <MudText Typo="Typo.body1">#:</MudText>
            <MudTextField T="int?" @bind-Value="@ViewModel.Quantity" Variant="Variant.Outlined" Adornment="Adornment.None" Style="width: 50px;" />
            <MudText Typo="Typo.body1">￥:</MudText>
            <MudTextField T="decimal?" @bind-Value="@ViewModel.Price" Variant="Variant.Outlined" Adornment="Adornment.None" Style="width: 50px;" />
            <MudText Typo="Typo.body1">Total:</MudText>
            <MudText Typo="Typo.body1">@ViewModel.Amount</MudText>
        </MudItem>
    </MudGrid>
}
else
{
    <MudProgressCircular Color="Color.Info" Indeterminate="true" />
}
